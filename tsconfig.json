{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "lib": ["ESNext", "DOM"]
    },

    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
